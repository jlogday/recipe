@NAME(CommonFields)
  created, updated, category, name, description

@NAME(ALL_RECIPES)
  select id, @INCLUDE(CommonFields)
  from recipe

@NAME(FIND_BY_ID)
  select id, @INCLUDE(CommonFields)
  from recipe
  where id = :id
  
@NAME(SAVE_RECIPE)
  insert into recipe(@INCLUDE(CommonFields))
  values(:created, :updated, :category, :name, :description)