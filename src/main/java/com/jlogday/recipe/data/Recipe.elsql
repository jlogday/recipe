@NAME(ALL_RECIPES)
  select id, version, created, updated, category, name, description, instructions
  from recipe

@NAME(FIND_BY_ID)
  select id, version, created, updated, category, name, description, instructions
  from recipe
  where id = :id
  
@NAME(SAVE_RECIPE)
  insert into recipe(category, name, description, instructions)
  values(:category, :name, :description, :instructions)